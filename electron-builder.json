{
    "productName": "Softbox",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "win": {
        "icon": "dist/assets/images/app_icon",
        "target": ["portable"]
    },
    "mac": { "icon": "dist/assets/images/app_icon", "target": ["dmg"] },
    "linux": { "icon": "dist/assets/images/app_icon", "target": ["AppImage"] }
}
